<!-- views/error.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Error</title>
    <style>
        body { font-family: Arial, sans-serif; background: #f8f8f8; color: #333; text-align: center; padding: 50px; }
        .error-container { background: #fff; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.1); display: inline-block; padding: 40px 60px; }
        h1 { color: #e74c3c; margin-bottom: 20px; }
        p { font-size: 1.2em; }
        a { color: #3498db; text-decoration: none; }
        a:hover { text-decoration: underline; }
    </style>
</head>
<body>
    <div class="error-container">
        <h1>Oops!</h1>
        <p><%= errorMessage %></p>
        <p><a href="/">Return to Home</a></p>
    </div>
</body>
</html>
