    <main>
        <div class="login-container">
            <h1>Pet Parent Signup</h1>
            <!-- Form for signup -->
            <form action="/customerSignupMethod" method="POST">
                <label for="username"><b>Username:</b></label>
                <input type="text" id="username" name="username" required>

                <label for="petName"><b>Pet Name:</b></label>
                <input type="text" id="petName" name="petName" required>

                <label for="petBreed"><b>Pet Breed:</b></label>
                <input type="text" id="petBreed" name="petBreed" required>

                <label for="password"><b>Password:</b></label>
                <input type="password" id="password" name="password" required>

                <label for="confirmpassword"><b>Confirm Password:</b></label>
                <input type="password" id="confirmpassword" name="confirmpassword" required>

                <button type="submit"><b>Signup</b></button>
            </form>
            <!-- Display error message if any -->
            <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
                <p style="color: red;"><%= errorMessage %></p>
            <% } %>
            <!-- Link to redirect to the login page -->
            <p>Already have an account? <a href="/customerlogin"><b>Login here</b></a></p>
        </div>
    </main>

